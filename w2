öğrenci_sayısı=int(input("kaç öğrenci eklenecek? "))
öğrenci_listesi = ["kerim aydın","ali yıldız","buse küpeli","cemil dursun"]

#Çoklu öğrenci ekleme         
def multipleAdd():
    devam_et=True
    while devam_et==True:
        öğrenciİsimSoyisim=input("ad soyad gir, durmak için 'stop' yaz: ").lower()
        öğrenci_listesi.append(öğrenciİsimSoyisim)
        if öğrenciİsimSoyisim=="stop":
          öğrenci_listesi.remove(öğrenciİsimSoyisim)
          devam_et=False
          
  #Öğrenci isimlerini ekrana yazdır.
def ogrenciGoster():
   
   for i in öğrenci_listesi:
      print(i)

#Öğrenci index numarasını yazdır.
def ogrenciNumara():

   ogrenci=input("numarasını öğrenmek istedğiniz öğrencinin ismini girin")
   öğrenci_listesi.index(ogrenci)
#Multiple deleting students
def multipledelete():
   devam_et=True
   while devam_et==True:
       öğrenciİsimSoyisim=input("silmek istediğiniz öğrencinin ad soyad gir, durmak için 'stop' yaz: ").lower()
       if öğrenciİsimSoyisim=="stop":
          devam_et=False
       else:
           öğrenci_listesi.remove(öğrenciİsimSoyisim)

